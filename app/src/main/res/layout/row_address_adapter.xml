<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outline"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_type_address"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"

        android:layout_marginTop="5dp"
        android:text="Type"
        android:layout_marginHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_street_address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_city_address"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/text_view_street_address"
        android:textSize="20dp"
        android:text="City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_zipcode_address"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:layout_below="@id/text_view_city_address"
        android:textSize="20dp"
        android:text="Zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/image_button_delete_address"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_alignParentRight="true"
        android:background="@color/beiji"
        android:layout_marginTop="40dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</RelativeLayout>