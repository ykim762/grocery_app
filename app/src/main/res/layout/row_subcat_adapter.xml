<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/outline"
    android:layout_marginHorizontal="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_view_sub"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_view_name_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view_sub"
        android:text="Product name"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_view_mrp_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/image_view_sub"
        android:text="mrp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_view_price_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mrp_sub"
        android:layout_toRightOf="@+id/image_view_sub"
        android:text="price"
        android:textColor="@color/colorDarkRed"
        android:textSize="18dp" />


</RelativeLayout>