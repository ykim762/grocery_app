<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/outline">

    <ImageView
        android:id="@+id/image_view_cart"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp" />

    <TextView
        android:id="@+id/text_view_name_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image_view_cart"
        android:text="Product name"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/text_view_mrp_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/image_view_cart"
        android:text="price"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text_view_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mrp_cart"
        android:layout_toRightOf="@+id/image_view_cart"
        android:text="price"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/image_button_delete"
        android:src="@drawable/ic_baseline_delete_24"
        android:background="@color/beiji"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/button_increase"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_toLeftOf="@id/text_view_quantity"
        android:text="+"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_toLeftOf="@id/button_decrease"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/button_decrease"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:text="-"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>